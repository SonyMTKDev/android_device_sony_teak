# Inherit framework first
$(call inherit-product, $(SRC_TARGET_DIR)/product/core_64_bit.mk)
$(call inherit-product, $(SRC_TARGET_DIR)/product/full_base.mk)

# Inherit from teak device
$(call inherit-product, device/sony/teak/device.mk)

# Inherit from common device
$(call inherit-product, device/sony/mt6757-common/mt6757.mk)

# Inherit some common LineageOS stuff.
$(call inherit-product, vendor/lineage/config/common_full_phone.mk)

# Inherit languages full.
$(call inherit-product, $(SRC_TARGET_DIR)/product/languages_full.mk)

# Set those variables here to overwrite the inherited values.
BOARD_VENDOR := SONY
PRODUCT_DEVICE := teak
PRODUCT_NAME := lineage_teak
PRODUCT_BRAND := SONY
PRODUCT_MODEL := XPERIA XA1 Plus
PRODUCT_MANUFACTURER := SONY

PRODUCT_GMS_CLIENTID_BASE := android-sony

# Set product device & name
PRODUCT_BUILD_PROP_OVERRIDES += \
   PRODUCT_NAME=teak \
   PRIVATE_BUILD_DESC="G3121-user 8.0.0 48.1.A.2.112 1877064199 release-keys"

BUILD_FINGERPRINT := "Sony/G3121/G3121:8.0.0/48.1.A.2.112/1877064199:user/release-keys"
